<h2>Dashboard</h2>
<h3>Welcome, {{name}}</h3>
<p>This is your Diaries</p>
{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <thead>
        {{#each diaries}}
        <tr>
            <td><a href="/api/v1/diaries/{{_id}}"></a>{{title}}</td>
            <td>{{createdAt}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td></td>
        </tr>
        {{/each}}
    </thead>
  </table>
{{else}}
  <p>No Diaries found.</p>
{{/if}}